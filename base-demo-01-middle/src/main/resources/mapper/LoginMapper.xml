<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.basedemo.middle.basedemo01middle.dao.LoginMapper">
    <resultMap id="TbCbrVOResultMap" type="com.basedemo.common.basedemo01common.vo.login.TbUser">
        <result column="id" property="id" jdbcType="VARCHAR"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap id="TbPowersResultMap" type="com.basedemo.common.basedemo01common.vo.login.TbPowers">
        <result column="userid" property="userid" jdbcType="VARCHAR"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="menuid" property="menuid" jdbcType="INTEGER"/>
    </resultMap>

    <select id="loginCheck" resultMap="TbCbrVOResultMap" parameterType="java.lang.String">
        select id       as id,
               username as username,
               password as password
        from tb_user
        where username = #{username,jdbcType=VARCHAR}
    </select>
    <select id="findUserById" resultMap="TbCbrVOResultMap" parameterType="java.lang.String">
        select id       as id,
               username as username,
               password as password
        from tb_user
        where id = #{id,jdbcType=VARCHAR}
    </select>
    <select id="getPowers" resultMap="TbPowersResultMap" parameterType="java.lang.String">
        select userid   as userid,
               username as username,
               menuid   as menuid
        from tb_powers a,
             tb_menu b
        where a.userid = #{userid,jdbcType=VARCHAR}
          and a.username = #{username,jdbcType=VARCHAR}
          and a.userid = b.id
          and b.state = '0'
    </select>
</mapper>